<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.main.camerasfragment.impl.CamerasFragment">


    <ProgressBar
        android:id="@+id/cameras_progress_bar"
        style="?android:attr/progressBarPadding"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
    />

    <TextView
        android:id="@+id/cameras_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/loading_products"
    />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cameras_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        tools:listitem="@layout/item_cameras_list"
    >
    </android.support.v7.widget.RecyclerView>
</LinearLayout>

